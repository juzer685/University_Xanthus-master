
@{
    /**/

    ViewBag.Title = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>LearnX Forgot Password</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/Images/Learnx.jpg">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <style>
        h6 {
            color: red;
        }
    </style>
    <link rel="stylesheet" href="../../plugins/toastr/toastr.min.css">
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Toastr -->
    <script src="../../plugins/toastr/toastr.min.js"></script>
    <!-- PAGE SCRIPTS -->
    <script src="~/Scripts/custom.js"></script>
</head>
<body class="hold-transition login-page" style="background: rgb(31, 45, 61);">
    <div class="login-box">
        
        <!-- /.login-logo -->
        <div class="card">
            <div class="login-logo" style="text-align: center;margin-top: 40px;">
                <a href="#"><b>Forgot Password</a>
            </div>
            <div class="card-body login-card-body">
                @*<p class="login-box-msg">An Email will be sent to your Email Id to change Password</p>*@

                <form action="~/Login/ForgotPassword" method="post">
                    <div class="form-group">
                        <label class="fontSize" for="email">Email</label>
                        <div class="input-group mb-3">
                            <input name="Email" type="text" class="form-control" placeholder="Please enter email" required pattern="^\w+([-+.']\w+)*@Html.Raw("@")\w+([-.]\w+)*\.\w+([-.]\w+)*$" oninvalid="this.setCustomValidity('please enter valid email id');" oninput="this.setCustomValidity('')">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row" style="justify-content: center;">
                            @*<div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>*@
                            <!-- /.col -->
                            <div class="col-offset-4 col-4">
                                <input id="btnForgotPass" type="submit" class="btn btn-primary btn-block" value="Submit" />
                                @*<button type="submit" class="btn btn-primary btn-block" value="Login">Login</button>*@
                            </div>
                            @if (ViewBag.Message != null)
                            {
                                <h6 class="align-center red-text">@ViewBag.Message</h6>
                            }

                            <!-- /.col -->
                        </div>
                    </div>
                </form>

                <div class="social-auth-links text-center mb-3">
                    <p style="text-decoration:underline;"><a href="/Login/Login">Back to Login</a></p>
                    @*<a href="#" class="btn btn-block btn-primary">
                    <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                </a>*@
                    @*<a href="#" class="btn btn-block btn-danger">
                    <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                </a>*@
                </div>
                <!-- /.social-auth-links -->
                @*<p class="mb-1">
                <a href="forgot-password.html">I forgot my password</a>
            </p>
            <p class="mb-0">
                <a href="register.html" class="text-center">Register a new membership</a>
            </p>*@
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>

</body>
</html>
