@model University.UI.Areas.Admin.Models.ProductSpecViewModel

<form onsubmit="SaveProductSpec(event)" name="ProductSpec" enctype="multipart/form-data" method="post" action="/Admin/Product/SaveProductSpecifiction">

    @Html.HiddenFor(y => y.ProductId)
    @Html.Hidden("SpecId", Model.Id)
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <label for="Title">Title</label>
            </div>
        </div>
        <input name="AssocitedID" id="ProductspecAssocitedID" type="hidden" />
        <div class="col-md-6">
            <div class="form-group">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control txtOnly", @required = "required", @pattern = "^[^<>%$*@!#]*$", @title = "Special characters are not allowed." })
                @Html.ValidationMessageFor(m => m.Title)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <label for="Description">Description</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">

                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="right">
            <button type="submit" class="btn btn-primary">Save</button>
            <button onclick="Cancel()" type="button" class="btn btn-primary">Cancel</button>
            <button onclick="Cancel()" type="button" class="btn btn-primary">Exit</button>
        </div>
    </div>
</form>

<script src="~/Scripts/ProjectValidation.js"></script>
