    $(document).ready(function () {
        $('#ProductTable').DataTable();
        $('#BasicDeatilsAssocitedID').val($("#ddlusrlst").val());
    });
    
    function AddProduct(Id) {
        
        // $(".imagereqbd").attr("required", true);
        var form = $("#AddEditForm");
     
        $("#ProductId").val(Id);
       
        form.submit();
        //alert();
        //$('#imagereqbd').attr('required', 'required');
        //$("#imagereqbd").attr("required", false);
       // $('.imagereqbd').attr("disabled", 'required');
        // $('.imagereqbd').prop('required',true);
    }

    function AddProducts(Id) {
        
        var form = $("#AddEditForm");
     
        $("#ProductId").val(Id);
       
        form.submit();
    }
    function DeleteProduct(Id) {
        $("#DeleteConfirmationModal").modal('show');
        $(document).on('click', 'button#confirmation-yes', function () {
            $.ajax({
                type: "POST",
                url: "/Admin/Product/DeleteProduct",
                data: { Id: Id }, // serializes the form's elements.
                success: function (data) {
                    //alert("Data Deleted Successfully"); // show response from the php script.
                   // location.reload();
                     _showSuccessMessage("Data Deleted Successfully");
                     setTimeout(function () { location.reload(); }, 1000);
                }
            });
        });
    }


   
</script>
