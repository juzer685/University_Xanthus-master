@model University.UI.Areas.Admin.Models.FAQViewModel
@{
    ViewBag.Title = "AddEditFAQ";
    Layout = null;
}

    <link href="~/dist/css/Custom.css" rel="stylesheet" />

<div>
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label for="email">Question</label>
        @Html.TextBoxFor(m => m.Question, new { @class = "form-control text-overflow", @required = "required",@maxlength="100" })
        @Html.ValidationSummary()
        @Html.ValidationMessageFor(x => x.Question, "", new { @class = "", style = "color:red;" })
        @*@Html.ValidationMessageFor(m => m.Question)*@
    </div>
    <div class="form-group">
        <label for="ImageUrl">Answer</label>
        @Html.TextAreaFor(m => m.Answer, new { @class = "form-control", @required = "required",@maxlength="500" })
        @Html.ValidationMessageFor(x => x.Answer, null, new { @class = "", style = "color:red;" })
        @*@Html.ValidationMessageFor(m => m.Answer)*@
    </div>
    @*<div class="form-group">
            <label for="ImageUrl">Slider Image</label>
            <input type="file" id="file" name="file" class="form-control" required accept="image/gif, image/jpeg, image/png" onchange="readURL(this);" />
            @Html.ValidationMessageFor(m => m.ImageURL)
            <img id="blah" src="@Model.ImageFullPath" alt="" width="250" height="250" />
        </div>*@
</div>

<script>
    $(document).ready(function () {
        @*var image = "@Model.ImageURL";
        if (image) {
            $("#file").removeAttr("required");
        }*@
    });

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

</script>
