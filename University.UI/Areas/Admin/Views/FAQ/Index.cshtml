    /*a:visited {
        color: #0254EB
    }*/
    a.morelink {
        text-decoration: none;
        outline: none;
    }

    .morecontent span {
        display: none;
    }

    .comment {
        width: 50%;
        /*background-color: #f0f0f0;*/
        margin: 10px;
