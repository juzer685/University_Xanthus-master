@model IEnumerable<University.UI.Areas.Admin.Models.FAQViewModel>

@{
    ViewBag.Title = "FAQ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .pointer {
        cursor: pointer;
    }
    /*a {
        color: #0254EB
